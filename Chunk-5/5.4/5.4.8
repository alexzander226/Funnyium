public class Meal{
    private String meal;
    private String time;
    private int servings;
    public Meal(String m, String t, int s){
        meal = m;
        time = t;
        servings = s;
    }
    public String getName(){
        return meal;
    }
    public String getCourse(){
        return time;
    }
    public int getNumberOfServings(){
        return servings;
    }
    public String toString(){
        return meal + " (" + time + ")";
    }
}
