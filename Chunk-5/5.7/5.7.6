import java.util.Scanner;

public class RockPaperScissors
{
    private static final String USER_PLAYER = "User wins!";
    private static final String COMPUTER_PLAYER = "Computer wins!";
    private static final String TIE = "Tie";
        
    public static String getWinner(String user, String computer)
    {
        if(user.equals(computer)){
            return TIE;
        }
        if(user.equals("rock") && computer.equals("scissors")){
            return USER_PLAYER;
        }else if(computer.equals("rock") && user.equals("scissors")){
            return COMPUTER_PLAYER;
        }else if(computer.equals("rock") && user.equals("paper")){
            return USER_PLAYER;
        }else if(user.equals("rock") && computer.equals("paper")){
            return COMPUTER_PLAYER;
        }else if(computer.equals("scissors") && user.equals("paper")){
            return COMPUTER_PLAYER;
        }else if (user.equals("scissors") && computer.equals("paper")){
            return USER_PLAYER;
        }else{
            return "ERROR";
        }
    }
    
    public static void main(String[] args)
    {
        Scanner input = new Scanner(System.in);
        while(true){
            System.out.println("Enter your choice (rock, paper, or scissors): ");
            String choice = input.nextLine();
            if(choice.equals("")){
                break;
            }
            System.out.println("User: " + choice);
            int robotChoice = Randomizer.nextInt(1, 3);
            if(robotChoice == 1){
                System.out.println("Computer: rock");
                System.out.println(RockPaperScissors.getWinner(choice, "rock"));
            }else if(robotChoice == 2){
                System.out.println("Computer: paper");
                System.out.println(RockPaperScissors.getWinner(choice, "paper"));
            }else if(robotChoice == 3){
                System.out.println("Computer: scissors");
                System.out.println(RockPaperScissors.getWinner(choice, "scissors"));
            }
        }
    }
}
